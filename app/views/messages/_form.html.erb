

<%= form_for(@message, html: {:class => "form-horizontal"}) do |f|%>

<div class="form-group">
  <div class="field">
    <div class="control-label col-md-1">
      <%= f.label :from %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :from, class: "form-control"%>
  </div>
</div>
</div>

<div class="form-group">
    <div class="control-label col-md-1">
      <%= f.label :description, 'Message' %>
    </div>
    <div class="col-md-3">
      <%= f.text_area :description, size:"100x12", class: "form-control"%>
    </div>
</div>

<div class="form-group">
  <div class="col-md-4 col-md-offset-1">
    <div class="action">
      <%= f.submit "Send Valentine", class:"btn btn-danger"%>
    </div>
  </div>
</div>

<% end %>
