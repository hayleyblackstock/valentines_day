<%= form_for @message do |f|%>

<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= f.label :from %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :from, class: "form-control"%>
  </div>
</div>
</div>

<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= f.label :description, 'Message' %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :description, class: "form-control"%>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="col-md-4 col-md-offset-2">
    <div class="action">
      <%= f.submit "Send Valentine", class:"btn btn-danger"%>
    </div>
  </div>
</div>

<% end %>
